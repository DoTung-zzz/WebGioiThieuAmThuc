<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebGioiThieuAmThuc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebGioiThieuAmThuc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-utensils me-2"></i>Ẩm Thực Việt
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @using Microsoft.AspNetCore.Http
                    @inject IHttpContextAccessor HttpContextAccessor
                    @{
                        var username = HttpContextAccessor.HttpContext?.Session.GetString("Username");
                    }
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="regionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Vùng miền
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="regionDropdown">
                                <li><a class="dropdown-item" asp-controller="Specialties" asp-action="Index" asp-route-regionId="1">Miền Bắc</a></li>
                                <li><a class="dropdown-item" asp-controller="Specialties" asp-action="Index" asp-route-regionId="2">Miền Trung</a></li>
                                <li><a class="dropdown-item" asp-controller="Specialties" asp-action="Index" asp-route-regionId="3">Miền Nam</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Specialties" asp-action="Index">Tất cả đặc sản</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Forum" asp-action="Index">Diễn đàn</a>
                        </li>
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Specialties" asp-action="Create">Đăng bài</a>
                            </li>

                            var role = HttpContextAccessor.HttpContext?.Session.GetString("Role");
                            if (role == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning" asp-controller="Specialties" asp-action="PendingPosts">
                                        <i class="fas fa-clipboard-check me-1"></i>Duyệt bài
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Xin chào, <strong>@username</strong>
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Profile"><i class="fas fa-user me-2"></i>Hồ sơ</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary me-2" asp-controller="Users" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary text-white" asp-controller="Users" asp-action="Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Main content wrapper to handle fixed navbar -->
    <div style="padding-top: 80px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold"><i class="fas fa-utensils me-2"></i>Ẩm Thực Việt</h5>
                    <p class="small">Khám phá và chia sẻ những món ăn đặc sản tuyệt vời của Việt Nam.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">Trang chủ</a></li>
                        <li><a asp-controller="Specialties" asp-action="Index" class="text-decoration-none text-muted">Tất cả đặc sản</a></li>
                        <li><a asp-controller="Forum" asp-action="Index" class="text-decoration-none text-muted">Diễn đàn</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">Chính sách</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">Liên hệ</h5>
                    <p class="small mb-1"><i class="fas fa-envelope me-2"></i>Email: contact@amthucviet.com</p>
                    <p class="small"><i class="fas fa-phone me-2"></i>Hotline: 1900-xxxx</p>
                </div>
            </div>
            <hr />
            <p class="text-center mb-0">&copy; 2025 - Ẩm Thực Việt - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Chính sách bảo mật</a></p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
