@{
    ViewData["Title"] = "Register";
    Layout = null;
}

@model WebGioiThieuAmThuc.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebGioiThieuAmThuc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <!-- Navigation Header -->
    <nav class="navbar navbar-light bg-white shadow-sm" style="position: fixed; top: 0; left: 0; right: 0; z-index: 1000;">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="color: #FF6B6B; font-weight: 700; font-size: 1.3rem;">
                <i class="fas fa-utensils me-2"></i>Ẩm Thực Việt
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm">
                <i class="fas fa-home me-1"></i>Trang chủ
            </a>
        </div>
    </nav>

    <div style="padding-top: 150px;"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-container">
                    <div class="login-header">
                        <h2>Tạo tài khoản</h2>
                        <p>Tham gia cùng chúng tôi để khám phá ẩm thực</p>
                    </div>
                    
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập" required />
                            <label asp-for="Username"><i class="fas fa-user me-2"></i>Tên đăng nhập</label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        
                        <div class="form-floating mb-3">
                            <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Mật khẩu" required />
                            <label asp-for="PasswordHash"><i class="fas fa-lock me-2"></i>Mật khẩu</label>
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Fullname" class="form-control" placeholder="Họ và tên" />
                            <label asp-for="Fullname"><i class="fas fa-id-card me-2"></i>Họ và tên</label>
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
                            <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Phone" class="form-control" placeholder="Số điện thoại" />
                            <label asp-for="Phone"><i class="fas fa-phone me-2"></i>Số điện thoại</label>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-login text-white w-100">
                            Đăng ký
                        </button>

                        <div class="divider">HOẶC</div>

                        <div class="login-footer">
                            <p class="text-secondary">Đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
